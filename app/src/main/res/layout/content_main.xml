<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".HomeActivity"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.75">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/ll_header"
                android:visibility="gone"
                android:layout_marginTop="@dimen/modul_margin_tanggung"
                android:paddingLeft="@dimen/modul_margin_default"
                android:paddingRight="@dimen/modul_margin_default"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_text"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:text="Billing"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_text"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="1.340.000"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/ll_header"
                android:layout_above="@id/ll_footer"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/modul_margin_default"
                android:weightSum="1"
                android:gravity="center">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_home"
                    android:scaleType="fitCenter"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:id="@+id/ll_footer">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/modul_margin_default"
                    android:layout_marginLeft="@dimen/modul_margin_default"
                    android:layout_marginRight="@dimen/modul_margin_default"
                    android:layout_marginBottom="@dimen/modul_margin_default"
                    app:cardCornerRadius="3dp"
                    app:cardElevation="3dp"
                    android:padding="@dimen/modul_margin_default">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="@dimen/modul_margin_default"
                        android:weightSum="4">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="@dimen/modul_margin_default"
                            android:id="@+id/ll_interne_usage"
                            android:background="?attr/selectableItemBackground"
                            android:weightSum="1">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.6"
                                android:src="@drawable/ic_internet_usage"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.4"
                                android:gravity="center_horizontal"
                                android:textSize="11sp"
                                android:paddingTop="@dimen/modul_margin_tiny"
                                android:textColor="@color/color_black"
                                android:text="Internet Usage"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="@dimen/modul_margin_default"
                            android:id="@+id/ll_ticket"
                            android:background="?attr/selectableItemBackground"
                            android:weightSum="1">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.6"
                                android:src="@drawable/ic_ticket"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.4"
                                android:gravity="center_horizontal"
                                android:textSize="11sp"
                                android:paddingTop="@dimen/modul_margin_tiny"
                                android:textColor="@color/color_black"
                                android:text="Ticket"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="@dimen/modul_margin_default"
                            android:id="@+id/ll_trouble"
                            android:background="?attr/selectableItemBackground"
                            android:weightSum="1">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.6"
                                android:src="@drawable/ic_trobel_analitic"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.4"
                                android:gravity="center_horizontal"
                                android:textSize="11sp"
                                android:paddingTop="@dimen/modul_margin_tiny"
                                android:textColor="@color/color_black"
                                android:text="Trouble Analytic"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="@dimen/modul_margin_default"
                            android:id="@+id/ll_courage"
                            android:background="?attr/selectableItemBackground"
                            android:weightSum="1">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.6"
                                android:src="@drawable/ic_coverage"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.4"
                                android:gravity="center_horizontal"
                                android:textSize="11sp"
                                android:paddingTop="@dimen/modul_margin_tiny"
                                android:textColor="@color/color_black"
                                android:text="Coverage Area"/>
                        </LinearLayout>

                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.25"
            android:layout_margin="@dimen/modul_margin_default"
            android:layout_marginLeft="@dimen/modul_margin_default"
            android:layout_marginRight="@dimen/modul_margin_default"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event"
                android:id="@+id/tv_event"
                android:textColor="@color/color_black"/>

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/modul_margin_small"
                android:id="@+id/rv_event"
                android:layout_below="@id/tv_event"></android.support.v7.widget.RecyclerView>
        </RelativeLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>