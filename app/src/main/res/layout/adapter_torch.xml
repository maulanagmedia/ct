<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size1"
        android:background="@drawable/ic_line"
        android:id="@+id/v_line"
        android:layout_marginBottom="@dimen/modul_margin_tanggung"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/modul_margin_default"
        android:layout_below="@id/v_line"
        android:paddingBottom="@dimen/modul_margin_default"
        android:paddingLeft="@dimen/modul_margin_default"
        android:paddingRight="@dimen/modul_margin_default">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/modul_margin_small"
                android:text="IP Perangkat"
                android:textColor="@color/md_black_1000"
                android:textSize="@dimen/menu_text_size"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.6"
                android:layout_height="wrap_content"
                android:text="Nama Perangkat"
                android:layout_marginRight="@dimen/modul_margin_small"
                android:textColor="@color/md_black_1000"
                android:textSize="@dimen/menu_text_size"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/modul_margin_small"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/modul_margin_small"
                android:textColor="@color/color_black"
                android:id="@+id/tv_item1"
                android:text=""/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.6"
                android:layout_marginRight="@dimen/modul_margin_small"
                android:layout_height="wrap_content"
                android:textColor="@color/color_black"
                android:id="@+id/tv_item2"
                android:text=""/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/modul_margin_small"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/modul_margin_small"
                android:text="IP Tujuan"
                android:textColor="@color/md_black_1000"
                android:textSize="@dimen/menu_text_size"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="wrap_content"
                android:text="Traffic Upload"
                android:textColor="@color/md_black_1000"
                android:layout_marginRight="@dimen/modul_margin_small"
                android:textSize="@dimen/menu_text_size"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="wrap_content"
                android:text="Traffic Download"
                android:textColor="@color/md_black_1000"
                android:textSize="@dimen/menu_text_size"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/modul_margin_small"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/modul_margin_small"
                android:textColor="@color/color_black"
                android:id="@+id/tv_item3"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="wrap_content"
                android:id="@+id/tv_item4"
                android:textColor="@color/color_black"
                android:layout_marginRight="@dimen/modul_margin_small"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="wrap_content"
                android:id="@+id/tv_item5"
                android:textColor="@color/color_black"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>