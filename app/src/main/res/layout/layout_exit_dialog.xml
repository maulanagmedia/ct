<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/modul_margin_default"
        android:background="@drawable/bg_round_white"
        android:orientation="vertical"
        android:padding="@dimen/modul_margin_default"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apakah anda yakin ingin keluar?"
            android:textColor="@color/color_black"
            android:textSize="16sp"
            android:layout_margin="@dimen/modul_margin_default"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/modul_margin_default"
            android:weightSum="2">

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:textColor="@color/color_white_pure"
                android:text="Ya"
                android:id="@+id/btn_ya"
                android:layout_marginLeft="@dimen/modul_margin_default"
                android:layout_marginRight="@dimen/modul_margin_default"
                android:background="@drawable/btn_submit"/>

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:textColor="@color/color_white_pure"
                android:id="@+id/btn_tidak"
                android:text="Tidak"
                android:layout_marginLeft="@dimen/modul_margin_default"
                android:layout_marginRight="@dimen/modul_margin_default"
                android:background="@drawable/btn_cancel"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>